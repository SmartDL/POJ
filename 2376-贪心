#include<iostream>
#include<algorithm>
using namespace std;
typedef pair<int,int> P;  //把pair<int,int>换成P
int n,t;
P a[25000];
int work(int begin,int num)
{
	int end=-1;
	for(int i=0;i<n;i++)
	{
		if(a[i].first<=begin)  
			end=max(a[i].second,end);
		else
		{
			i--;
			if(end==-1)
				return -1;
			else
			{
				begin=end+1;
				end=-1;
				num++;
			}
		}
		if(end>=t)
			return num+1;
	}
	return -1;
}
int main()
{
	cin>>n>>t;
	for(int i=0;i<n;i++)
		cin>>a[i].first>>a[i].second;
	sort(a,a+n);
	int x=work(1,0);
	cout<<x<<endl;
	return 0;
 } 
